    <basicMemberKind>LizardianMelee</basicMemberKind>
    <pawnsPlural>Monitorians</pawnsPlural>
    <settlementGenerationWeight>0.5</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <canMakeRandomly>false</canMakeRandomly>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(40, 3)</li>
        <li>(400, 1)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <factionIconPath>World/ReptillioidVillage</factionIconPath>
