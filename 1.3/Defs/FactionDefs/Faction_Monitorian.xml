          <LizardianRanged>100</LizardianRanged>
          <LizardianChief>60</LizardianChief>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <LizardianTrader>1</LizardianTrader>
          <MonitorianTrader>1</MonitorianTrader>
        </traders>
        <carriers>
          <Dromedary>2</Dromedary>
        </carriers>
        <guards>
          <MonitorianMelee>40</MonitorianMelee>
          <MonitorianRanged>50</MonitorianRanged>
          <LizardianMelee>80</LizardianMelee>
          <LizardianRanged>100</LizardianRanged>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <MonitorianMelee>40</MonitorianMelee>
          <MonitorianRanged>50</MonitorianRanged>
