  <!-- Monitorians-->
  <AlienRace.ThingDef_AlienRace ParentName="BasePawn">
    <defName>Alien_Tortoid</defName>
    <label>Tortoid</label>
    <description>TBD</description>
    <alienRace>
      <generalSettings>
        <humanRecipeImport>true</humanRecipeImport>
        <maleGenderProbability>0.5</maleGenderProbability>
        <immuneToAge>false</immuneToAge>
        <canLayDown>true</canLayDown>
        <forcedRaceTraitEntries>
        </forcedRaceTraitEntries>
        <factionRelations>
          <li>
            <factions>
              <li>MonitorianFaction</li>
              <li>MonitorianPlayerTribe</li>
            </factions>
          </li>
        </factionRelations>
        <alienPartGenerator>
          <aliencrowntypes>
            <li>Average_Normal</li>
          </aliencrowntypes>
          <alienbodytypes>
            <li>Male</li>
          </alienbodytypes>
          <useGenderedHeads>false</useGenderedHeads>
          <colorChannels>
            <li>
              <name>skin</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <li>
                    <weight>1</weight>
                    <min>RGBA(0.9,0.9,0.90,1)</min>
                    <max>RGBA(1.0,1.0,1.0,1)</max>
                  </li>
                </options>
              </first>
            </li>
            <li>
              <name>hair</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <!-- Pale -->
                  <li>
                    <weight>5</weight>
                    <min>RGBA(0.9,0.9,0.90,1)</min>
                    <max>RGBA(1.0,1.0,1.0,1)</max>
                  </li>
                </options>
              </first>
            </li>
          </colorChannels>
          <customDrawSize>(1,1)</customDrawSize>
          <customHeadDrawSize>(0.7, 0.7)</customHeadDrawSize>
          <customPortraitDrawSize>(1,1)</customPortraitDrawSize>
          <customPortraitHeadDrawSize>(0.7, 0.7)</customPortraitHeadDrawSize>
          <headOffset>(0, -0.2)</headOffset>
        </alienPartGenerator>
      </generalSettings>
      <graphicPaths>
        <li>
          <body>Things/Pawn/Humanlike/Tortoid/Body/</body>
          <head>Things/Pawn/Humanlike/Tortoid/Head/</head>
        </li>
      </graphicPaths>
      <styleSettings>
        <li>
          <key>HairDef</key>
          <value>
            <styleTags>
              <li>MonitorianHair</li>
            </styleTags>
          </value>
        </li>
        <li>
          <key>BeardDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
      </styleSettings>
      <thoughtSettings>
        <cannotReceiveThoughts>
          <li>SleptOnGround</li>
        </cannotReceiveThoughts>
      </thoughtSettings>
      <relationSettings>
      </relationSettings>
      <raceRestriction>
      </raceRestriction>
    </alienRace>
    <statBases>
      <MarketValue>1000</MarketValue>
      <MoveSpeed>3</MoveSpeed>
      <Flammability>1.0</Flammability>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <ComfyTemperatureMin>20</ComfyTemperatureMin>
      <ComfyTemperatureMax>40</ComfyTemperatureMax>
      <LeatherAmount>25</LeatherAmount>
      <ToxicSensitivity>0.8</ToxicSensitivity>
      <ResearchSpeed>2</ResearchSpeed>
      <WorkSpeedGlobal>0.8</WorkSpeedGlobal>
    </statBases>
    <tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.60</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>4</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.60</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>4</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
        <soundMeleeHit>Pawn_Melee_HumanBite_Hit</soundMeleeHit>
        <soundMeleeMiss>Pawn_Melee_HumanBite_Miss</soundMeleeMiss>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <thinkTreeMain>Humanlike</thinkTreeMain>
      <thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
      <intelligence>Humanlike</intelligence>
      <makesFootprints>true</makesFootprints>
      <leatherDef>Leather_Lizard</leatherDef>
