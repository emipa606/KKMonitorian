  <!-- Monitorians-->
  <AlienRace.ThingDef_AlienRace ParentName="BasePawn">
    <defName>Alien_Lizardian</defName>
    <label>Lizardian</label>
    <description>Small, fast and venomous, these nimble reptillioids are often underestimated in combat. They don't mind darkness and are exelent crafters and growers</description>
    <alienRace>
      <generalSettings>
        <humanRecipeImport>true</humanRecipeImport>
        <maleGenderProbability>0.5</maleGenderProbability>
        <immuneToAge>false</immuneToAge>
        <canLayDown>true</canLayDown>
        <forcedRaceTraitEntries>
          <li>
            <defName>Shadow</defName>
            <chance>10</chance>
          </li>
        </forcedRaceTraitEntries>
        <factionRelations>
          <li>
            <factions>
              <li>MonitorianFaction</li>
              <li>MonitorianPlayerTribe</li>
            </factions>
          </li>
        </factionRelations>
        <alienPartGenerator>
          <aliencrowntypes>
            <li>Average_Normal</li>
          </aliencrowntypes>
          <alienbodytypes>
            <li>Thin</li>
          </alienbodytypes>
          <useGenderedHeads>false</useGenderedHeads>
          <colorChannels>
            <li>
              <name>skin</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <!--  White -->
                  <li>
                    <weight>1</weight>
                    <min>RGBA(0.9,0.9,0.90,1)</min>
                    <max>RGBA(1.0,1.0,1.0,1)</max>
                  </li>
                  <!--  Darkish -->
                  <li>
                    <weight>10</weight>
                    <min>RGBA(0.4,0.2,0.2,1)</min>
                    <max>RGBA(0.8,0.5,0.4,1)</max>
                  </li>
                  <!--  Reddish -->
                  <li>
                    <weight>5</weight>
                    <min>RGBA(0,8,0.1,0.15,1)</min>
                    <max>RGBA(0.9,0.5,0.28,1)</max>
                  </li>
                  <!--  Greenish -->
                  <li>
                    <weight>5</weight>
                    <min>RGBA(0.20,0.60,0.20,1)</min>
                    <max>RGBA(0.50,0.6,0.3,1)</max>
                  </li>
                  <!--  Blueish -->
                  <li>
                    <weight>5</weight>
                    <min>RGBA(0.20,0.50,0.70,1)</min>
                    <max>RGBA(0.50,0.6,0.8,1)</max>
                  </li>
                  <!--  Pinkish -->
                  <li>
                    <weight>5</weight>
                    <min>RGBA(0.60,0.40,0.70,1)</min>
                    <max>RGBA(0.80,0.5,0.8,1)</max>
                  </li>
                </options>
              </first>
            </li>
            <li>
              <name>hair</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <!-- Pale -->
                  <li>
                    <weight>5</weight>
                    <min>RGBA(0.9,0.9,0.90,1)</min>
                    <max>RGBA(1.0,1.0,1.0,1)</max>
                  </li>
                </options>
              </first>
            </li>
          </colorChannels>
          <customDrawSize>(0.5,0.5)</customDrawSize>
          <customHeadDrawSize>(0.5, 0.5)</customHeadDrawSize>
          <customPortraitDrawSize>(1.5,1.5)</customPortraitDrawSize>
          <customPortraitHeadDrawSize>(1, 1)</customPortraitHeadDrawSize>
          <headOffset>(0, -0.15)</headOffset>
        </alienPartGenerator>
      </generalSettings>
      <graphicPaths>
        <li>
          <body>Things/Pawn/Humanlike/Monitorian/Body/</body>
          <head>Things/Pawn/Humanlike/Monitorian/Head/</head>
        </li>
      </graphicPaths>
      <styleSettings>
        <li>
          <key>HairDef</key>
          <value>
            <styleTags>
              <li>MonitorianHair</li>
            </styleTags>
          </value>
        </li>
        <li>
          <key>BeardDef</key>
          <value>
            <hasStyle>false</hasStyle>
          </value>
        </li>
      </styleSettings>
      <thoughtSettings>
        <cannotReceiveThoughts>
          <li>SleptOnGround</li>
          <li>EnvironmentDark</li>
        </cannotReceiveThoughts>
      </thoughtSettings>
      <relationSettings>
      </relationSettings>
      <raceRestriction>
        <weaponList>
        </weaponList>
        <whiteWeaponList>
          <li>MeleeWeapon_Knife</li>
          <li>Bow_Short</li>
          <li>Blowgun</li>
          <li>Weapon_GrenadeFrag</li>
          <li>Weapon_GrenadeMolotov</li>
          <li>Weapon_GrenadeEMP</li>
        </whiteWeaponList>
      </raceRestriction>
    </alienRace>
    <statBases>
      <MarketValue>800</MarketValue>
      <MoveSpeed>6</MoveSpeed>
      <Flammability>1.0</Flammability>
      <ComfyTemperatureMin>20</ComfyTemperatureMin>
      <ComfyTemperatureMax>40</ComfyTemperatureMax>
      <LeatherAmount>10</LeatherAmount>
      <ToxicSensitivity>0.8</ToxicSensitivity>
      <CarryingCapacity>50</CarryingCapacity>
      <MeleeDodgeChance>1.5</MeleeDodgeChance>
      <ShootingAccuracyPawn>1.5</ShootingAccuracyPawn>
      <PlantWorkSpeed>1.5</PlantWorkSpeed>
      <GeneralLaborSpeed>1.5</GeneralLaborSpeed>
      <WorkSpeedGlobal>0.8</WorkSpeedGlobal>
    </statBases>
    <tools>
      <li>
        <label>left claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>3</power>
        <cooldownTime>0.8</cooldownTime>
        <linkedBodyPartsGroup>LeftHandClawsGroup</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>6</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>3</power>
        <cooldownTime>0.8</cooldownTime>
        <linkedBodyPartsGroup>RightHandClawsGroup</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>6</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>ToxicBite</li>
        </capacities>
        <power>6</power>
        <cooldownTime>0.9</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
        <soundMeleeHit>Pawn_Melee_HumanBite_Hit</soundMeleeHit>
        <soundMeleeMiss>Pawn_Melee_HumanBite_Miss</soundMeleeMiss>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <thinkTreeMain>Humanlike</thinkTreeMain>
      <thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
      <intelligence>Humanlike</intelligence>
      <makesFootprints>true</makesFootprints>
      <leatherDef>Leather_Lizard</leatherDef>
      <lifeExpectancy>45</lifeExpectancy>
      <nameCategory>HumanStandard</nameCategory>
      <body>MonitorianBody</body>
      <baseBodySize>0.5</baseBodySize>
      <baseHealthScale>0.5</baseHealthScale>
      <foodType>OmnivoreHuman</foodType>
      <gestationPeriodDays>45</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(1.01, 0.02)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeStageAges>
        <li>
          <def>MonitorianSeedlingStage</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>MonitorianYoungStage</def>
          <minAge>2</minAge>
        </li>
        <li>
          <def>MonitorianAdolescentStage</def>
          <minAge>15</minAge>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
      <specialShadowData>
        <volume>(0.3, 0.8, 0.4)</volume>
        <offset>(0,0,-0.3)</offset>
      </specialShadowData>
      <ageGenerationCurve>
        <points>
          <li>(16,0)</li>
          <li>(20,50)</li>
          <li>(50,100)</li>
          <li>(100,70)</li>
          <li>(110,18)</li>
          <li>(120,10)</li>
          <li>(130,3)</li>
          <li>(150,0)</li>
        </points>
      </ageGenerationCurve>
      <hediffGiverSets>
        <li>OrganicStandard</li>
      </hediffGiverSets>
    </race>
    <recipes>
      <li>InstallPowerClaw</li>
      <li>InstallBionicEye</li>
      <li>InstallBionicArm</li>
      <li>InstallBionicLeg</li>
      <li>InstallSimpleProstheticArm</li>
      <li>InstallSimpleProstheticLeg</li>
      <li>InstallPegLeg</li>
      <li>InstallDenture</li>
      <li>InstallJoywire</li>
      <li>InstallPainstopper</li>
      <li>InstallNaturalHeart</li>
      <li>InstallNaturalLung</li>
      <li>InstallNaturalKidney</li>
      <li>InstallNaturalLiver</li>
      <li>ExciseCarcinoma</li>
      <li>RemoveBodyPart</li>
      <li>Euthanize</li>
      <li>Anesthetize</li>
